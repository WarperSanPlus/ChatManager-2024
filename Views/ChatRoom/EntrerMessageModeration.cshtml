@model IEnumerable<Models.Message>

@foreach (var message in Model)
{
    var id = message.Id;
    var content = message.Content;
    
    message.FetchUsers();
    var sender = message.Sender;
    var receiver = message.Receiver;

    var date = message.SentAt.ToString("HH:mm:ss");
    var title = "Envoyé à " + date;

    <div class="moderation-entry" data-id="@id">
        <div title="Envoyé par @sender.GetFullName()" class="UserSmallAvatar user" style="background-image: url('@sender.Avatar')"></div>
        <div title="Reçu par @receiver.GetFullName()" class="UserSmallAvatar user" style="background-image: url('@receiver.Avatar')"></div>

        <i class="fa-solid fa-fw fa-times-circle delete" title="Effacer ce message"></i>
        <div class="message" title="@title">
            @Helper.ParseContent(content)
        </div>
    </div>
}

@if (Model.Count() == 0)
{
    <div>
        Aucun message
    </div>
}